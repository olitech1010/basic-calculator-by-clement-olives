<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrignometryActivity"
    android:background="@color/black">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/home_screen2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/box_design"
            android:foreground="@drawable/home"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/retry2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/box_design"
            android:foreground="@drawable/ic_baseline_refresh_24"
            android:onClick="retry2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>




    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Input angle in degree"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30dp"/>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginTop="398dp"
        android:foregroundGravity="bottom|center"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393">

    </LinearLayout>

    <TextView
        android:id="@+id/textView_trignometry"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:gravity="center|left"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="30dp" />



    <EditText
        android:id="@+id/edittex_trignometry"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        android:background="@drawable/box_design"
        android:baselineAligned="true"
        android:ems="10"
        android:foregroundGravity="bottom"
        android:gravity="center"
        android:hint="value in degree"
        android:inputType="numberSigned|numberDecimal"
        android:paddingLeft="7sp"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="521dp" />


    <RadioGroup
        android:id="@+id/groupradio"
        android:layout_width="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content">

        <!-- In RadioGroup create the 1 Radio Button-->
        <!-- like this we will add some more Radio Button-->
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id1"
            android:buttonTint="@color/white"
            android:textColor="@android:color/white"
            android:text="Sin"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id2"
            android:buttonTint="@color/white"
            android:textColor="@android:color/white"
            android:text="Cos"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id3"
            android:buttonTint="@color/white"
            android:textColor="@android:color/white"
            android:text="tan"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:textColor="@android:color/white"
            android:id="@+id/radia_id4"
            android:text="cosec"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:textColor="@android:color/white"
            android:id="@+id/radia_id5"
            android:text="sec"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:textColor="@android:color/white"
            android:id="@+id/radia_id6"
            android:text="cot"
            android:textSize="20sp"/>

    </RadioGroup>



    <Button
        android:id="@+id/buttonsubmit_trignometry"
        android:layout_width="171dp"
        android:layout_height="61dp"
        android:layout_gravity="bottom|center"
        android:layout_marginHorizontal="2dp"
        android:background="@drawable/button_design2"
        android:foregroundGravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:shadowColor="@color/purple_500"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="25sp" />



</LinearLayout>
